{
  "name": "snyk-take-home",
  "version": "1.0.0",
  "description": "Take-home test from Snyk",
  "scripts": {
    "start": "node server.js",
    "pretest": "standard --fix",
    "test": "nyc mocha test/**/*-test.js test/*-test.js",
    "posttest": "jsdoc --recurse lib/ utils/ --destination ./docs --package ./package.json --readme ./README.md"
  },
  "author": "Teodora Sandu",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "got": "^11.8.1",
    "logging": "^3.3.0",
    "node-cache": "^5.1.2",
    "semver": "^7.3.4",
    "validate-npm-package-name": "^3.0.0"
  },
  "devDependencies": {
    "chai": "^4.3.0",
    "jsdoc": "^3.6.6",
    "mocha": "^8.2.1",
    "nock": "^13.0.7",
    "nyc": "^15.1.0",
    "sinon": "^9.2.4",
    "sinon-chai": "^3.5.0",
    "standard": "^16.0.3",
    "supertest": "^6.1.3"
  },
  "standard": {
    "env": [
      "mocha"
    ],
    "ignore": [
      "docs"
    ]
  },
  "nyc": {
    "include": [
      "lib/**/*.js",
      "utils/**/*.js",
      "app.js"
    ],
    "exclude": [
      "**/*-test.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "all": true,
    "report-dir": "reports/coverage"
  }
}
